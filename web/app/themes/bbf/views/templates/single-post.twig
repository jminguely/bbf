{% extends "base.twig" %}

{% block content %}
<div class="site-wrapper pt-sm-9 pt-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-md-1">
        <time class="half-opacity" datetime="{{ post.date('Y-m-d') }}">{{ post.date('j F Y') }}</time>
        <h2 class="mt-3 mb-4 my-md-4">{{ title }}</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7 offset-md-1">
        {% if post.thumbnail %}
          <img class="img-fluid" src="{{ post.thumbnail.src("cover") }}">
        {% endif %}
        <div class="row half-opacity pt-3 pt-md-5 main-content">
          <div class="col-md-11 pb-3 pb-md-5">
            {{ post.content }}
          </div>
        </div>
      </div>
      <div class="col-md-4 px-md-5 mb-5">
        <h3 class="h4 mb-4">Derniers articles</h3>
        {% for article in posts %}
          <a href="{{ article.link }}" class="news-teaser news-teaser-small clearfix mb-3 d-block">
            <img class="float-left w-33 mr-3" src="{{ article.thumbnail.src("thumbnail") }}">
            <div class="content">
              <h4 class="mt-3">
                {{ article.title }}
              </h4>
              <time datetime="{{ article.date('Y-m-d') }}">{{ article.date('j F Y') }}</time>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
