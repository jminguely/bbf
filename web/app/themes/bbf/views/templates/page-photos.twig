{% extends "base.twig" %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mb-5">
      <div class="pt-sm-9 pb-sm-7 pt-5 pb-4">
        <h1>Notre galerie photo</h1>
        <p class="half-opacity">Revivez nos plus beaux moments, nos plus belles émotions !</p>
      </div>
      <div class="row">
        {% for gallery in galleries %}
          <div class="col-md-6">
            <a href="{{ gallery.link }}" class="gallery-thumbnail">
              <div class="overlay">
                <div class="content">
                  <h4>{{ gallery.title }}</h4>
                  <p class="text-small my-0">
                    Découvrir l’album
                    <svg class="icon icon-right icon-arrow_right">
                      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-arrow_right"></use>
                    </svg>
                  </p>
                </div>
              </div>
              {% if gallery.thumbnail %}
                <img src="{{ gallery.thumbnail.src("gallery-thumbnail") }}">
              {% else %}
                <img class="cover-image" src="{{ TimberImage(gallery.gallery|first).src("gallery-thumbnail") }}">
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center pb-7">
      <a href="#" class="btn btn-primary">
        Charger plus
        <svg class="icon icon-right icon-arrow_right">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-arrow_right"></use>
        </svg>
      </a>
    </div>
  </div>
</div>
{% endblock %}



