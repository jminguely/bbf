{% extends "base.twig" %}

{% block content %}
<div class="container">
  <div class="row d-none d-sm-block">
    <div class="col-md-12 mt-7 mb-4">
      <a href="{{ posts|first.link }}" class="jumbotron jumbotron-fluid dark-gradient-overlay d-block bg-inverse text-white align-text-bottom">
        <div class="container jumbotron-content px-5">
          <div class="row">
            <div class="col-md-8">
              <time class="half-opacity" datetime="{{ posts|first.date('Y-m-d') }}">{{ posts|first.date('j F Y') }}</time>
              <h2 class="my-4">{{ posts|first.title }}</h2>
              <span class="btn btn-primary btn-lg" role="button">Lire l'article â†’</span>
            </div>
          </div>
        </div>
        <img class="cover-image" src="{{ posts|first.thumbnail.src("cover") }}">
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row news-flow">
        {% for post in posts %}
          {% if loop.first %}<div class="d-block d-sm-none mt-7">{% endif %}
            <div class="col-sm-6 col-md-4 mb-md-4 mb-5 mb-md-8 mt-3">
              {% include 'components/news/news-teaser.twig' %}
            </div>
            <div class="col-12 d-sm-none">
              <hr class="mb-4">
            </div>
          {% if loop.first %}</div>{% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
