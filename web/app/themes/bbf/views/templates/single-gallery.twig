{% extends "base.twig" %}

{% block content %}
<section class="jumbotron jumbotron-fluid bg-inverse text-white align-text-bottom dark-overlay">
  <div class="container jumbotron-content">
    <div class="row">
      <div class="col-12">
        <h2>{{ title }}</h2>
      </div>
    </div>
  </div>
  {% if gallery.thumbnail %}
    <img class="cover-image" src="{{ gallery.thumbnail.src("cover") }}">
  {% else %}
    <img class="cover-image" src="{{ TimberImage(gallery.gallery|first).src("cover") }}">
  {% endif %}
</section>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mb-3">
      <div class="pt-sm-7 pb-sm-5 pt-3 pb-2">
        <div class="gallery">
          {% for image in gallery.gallery %}
            <figure class="gallery-item" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
              <a data-index="{{ loop.index }}" href="{{ TimberImage(image).src("large") }}" itemprop="contentUrl" data-width="{{ TimberImage(image).width("large") }}" data-height="{{ TimberImage(image).height("large") }}" class="gallery-thumbnail">
                <img
                  data-src="{{ TimberImage(image).src("gallery-thumbnail") }}"
                  width="{{ TimberImage(image).width("gallery-thumbnail") }}"
                  height="{{ TimberImage(image).height("gallery-thumbnail") }}"
                >
                <div class="overlay">
                  <div class="content">
                    <p class="my-0 d-md-inline-block d-none">
                      <svg class="icon icon-plus">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-plus"></use>
                      </svg>
                    </p>
                  </div>
                </div>
                {% if image.caption %}
                  <figcaption>
                    <p>{{ image.caption }}</p>
                  </figcaption>
                {% endif %}
              </a>
            </figure>
          {% endfor %}
        </div>
        <div class="pswp" id="pswp" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="pswp__bg"></div>
          <div class="pswp__scroll-wrap">
            <div class="pswp__container">
                <div class="pswp__item"></div>
                <div class="pswp__item"></div>
                <div class="pswp__item"></div>
            </div>
            <div class="pswp__ui pswp__ui--hidden">
              <div class="pswp__top-bar">
                <div class="pswp__counter"></div>
                <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
                <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
                <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
                <div class="pswp__preloader">
                  <div class="pswp__preloader__icn">
                    <div class="pswp__preloader__cut">
                      <div class="pswp__preloader__donut"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                <div class="pswp__share-tooltip"></div>
              </div>
              <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
              </button>
              <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
              </button>
              <div class="pswp__caption">
                <div class="pswp__caption__center"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
