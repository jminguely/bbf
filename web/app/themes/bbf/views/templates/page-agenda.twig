{% extends "base.twig" %}

{% block content %}
<section class="pt-sm-9 pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-7 offset-md-1">
        <h2>{{ title }}</h2>
        <p class="lead half-opacity">{{ page.content|striptags }}</p>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-1 mb-8">
        <h3 id="formation-a" class="mb-6 pt-md-8">Formation A</h3>
        {% for event in events.a %}
          {% include 'components/event/event-item.twig' %}
          {% if loop.last %}
            <hr class="my-5 d-md-none">
          {% else %}
            <hr class="my-5">
          {% endif %}
        {% endfor %}
      </div>
      <div class="col-md-4 offset-md-1 mb-8">
        <h3 id="formation-b" class="mb-6 pt-md-8">Formation B</h3>
        {% for event in events.b %}
          {% include 'components/event/event-item.twig' %}
          {% if loop.last %}
            <hr class="my-5 d-md-none">
          {% else %}
            <hr class="my-5">
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% endblock %}
