{% extends "base.twig" %}

{% block content %}
<section class="jumbotron jumbotron-fluid bg-inverse text-white">
  <div class="container jumbotron-content">
    <div class="row">
      <div class="col-md-6 text-center text-md-left my-8 my-md-0 px-5 px-md-0">
        <h2>{{ title }}</h2>
        <p class="lead half-opacity d-none d-md-block">{{ page.content|striptags }}</p>
        <a class="btn btn-primary btn-lg mt-4 mt-md-0" href="/presentation" role="button">
          En savoir plus
          <svg class="icon icon-right icon-arrow_right">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-arrow_right"></use>
          </svg>
        </a>
      </div>
    </div>
  </div>
  {% if page.thumbnail.src %}
    <img class="cover-image" src="{{ page.thumbnail.src }}">
  {% else %}
    <img class="cover-image" src="{{ theme.link }}/build/images/home_cover.jpg">
  {% endif %}
</section>
<section class="bg-lightgray">
  <div class="container py-8">
    <div class="row">
      <div class="col-md-12">
        <h2>Les dernières news</h3>
      </div>
      <div class="col-md-12 text-left text-md-right mt-4 mt-md-0">
        <a href="{{ post_archive_url }}" class="btn btn-primary">
          Toutes les news
          <svg class="icon icon-right icon-arrow_right">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-arrow_right"></use>
          </svg>
        </a>
      </div>
    </div>
    <div class="row pt-5 d-flex flex-row">
      {% for post in posts %}
        <div class="col-md-4 mb-4 mb-md-0">
          {% include 'components/news/news-teaser-card.twig' %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<section>
  <div class="container py-8">
    <div class="row">
      <div class="col-md-7">
        <div class="row">
          <div class="col-md-11">
            <h2 class="my-2 my-md-5">Ne manquez pas les prochaines prestations du Brass Band Fribourg! </h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-11">
            <div class="row mb-3">
              <div class="col-12">
                <div class="event-table my-md-4">
                  <div class="event-cell">
                    <h3 class="mb-5 mt-5 mt-md-0">Ensemble A</h3>
                  </div>
                  {% include 'components/event/event-teaser.twig' with { event: events.a[0] } %}
                  {% include 'components/event/event-teaser.twig' with { event: events.a[1], event_class: "d-none d-lg-block" } %}
                  <div class="event-cell">
                    <h3 class="mb-5 mt-5 mt-md-0">Ensemble B</h3>
                  </div>
                  {% include 'components/event/event-teaser.twig' with { event: events.b[0] } %}
                  {% include 'components/event/event-teaser.twig' with { event: events.b[1], event_class: "d-none d-lg-block" } %}
                </div>
              </div>
              </div>
            <div class="row">
              <div class="col-12">
                <a href="{{ event_archive_url }}" class="btn btn-primary">
                  Tous les évènements
                  <svg class="icon icon-right icon-arrow_right">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-arrow_right"></use>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-5 d-none d-md-block">
        <img src="{{ theme.link }}/build/images/agenda_figure.jpg" alt="" class="img-fluid">
      </div>
    </div>
  </div>
</section>
{% endblock %}
